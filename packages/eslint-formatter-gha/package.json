    "tag": "node ../../scripts/newTag.js"
  },
  "engines": {
    "node": "^20.10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnnAngela/eslint-packages.git",
    "directory": "packages/eslint-formatter-gha"
  },
  "keywords": [
    "eslint",
    "eslint-formatter",
    "eslintformatter"
  ],

{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES2022", // Node 20 - https://github.com/tsconfig/bases#centralized-recommendations-for-tsconfig-bases
        "lib": [
            "es2023", // Node 20 - https://github.com/tsconfig/bases#centralized-recommendations-for-tsconfig-bases
        ],
        "module": "Node16", // Node 20 - https://github.com/tsconfig/bases#centralized-recommendations-for-tsconfig-bases
        "moduleResolution": "Node16", // Node 20 - https://github.com/tsconfig/bases#centralized-recommendations-for-tsconfig-bases
        "removeComments": true,
        "alwaysStrict": true,
        "strict": true,
        "downlevelIteration": true,
        "rootDir": "./src",
        "baseUrl": "./",
        "outDir": "./dist",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "newLine": "lf",
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
    },
    "exclude": [
        "dist",
        "node_modules",
        "scripts",
    ],
}

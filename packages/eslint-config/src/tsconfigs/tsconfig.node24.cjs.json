{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "display": "Node 24 (commonjs)",
    "_version": "22.0.0",
    "compilerOptions": {
        // Modules
        "module": "commonjs",
        "moduleResolution": "node10",
        // Language and Environment
        "lib": [ // Node 24 - https://github.com/tsconfig/bases#centralized-recommendations-for-tsconfig-bases
            "es2024",
            "ESNext.Array",
            "ESNext.Collection",
            "ESNext.Iterator",
            "ESNext.Promise",
        ],
        "target": "es2024", // Node 24 - https://github.com/tsconfig/bases#centralized-recommendations-for-tsconfig-bases
    },
}

{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "display": "Node 22",
    "_version": "22.0.0",
    "compilerOptions": {
        // Modules
        "module": "nodenext", // Node 20 - https://github.com/tsconfig/bases#centralized-recommendations-for-tsconfig-bases
        "moduleResolution": "Node16", // Node 20 - https://github.com/tsconfig/bases#centralized-recommendations-for-tsconfig-bases
        "resolveJsonModule": true,
        "resolvePackageJsonExports": true,
        // Language and Environment
        "lib": [ // Node 20 - https://github.com/tsconfig/bases#centralized-recommendations-for-tsconfig-bases
            "es2023",
        ],
        "target": "ES2022", // Node 20 - https://github.com/tsconfig/bases#centralized-recommendations-for-tsconfig-bases
    },
}
